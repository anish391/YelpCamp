<%-include("../partials/header.ejs")%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp </h1>   
            <p>View our handpicked campgrounds from all over the world.</p>
            <div class="buttonContainer">
                <a class="btn btn-primary btn-large" href="/">Landing</a>
                <a class="btn btn-primary btn-large" href="campgrounds/new">Add New</a> 
            </div>
        </div>
    </header>
    
    
    <div class="row text-center">
    <%campgrounds.forEach(function(campground){%>
        <div class="rowCell col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=campground.image%>"/ class="img-responsive">
                <div class="caption">
                    <h4> <%=campground.name%> </h4>
                </div>
                <p>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
    </div>
</div>
<%-include("../partials/footer.ejs")%> 
